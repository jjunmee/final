<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.UserMapper">
	<select id="login" resultType="int" parameterType="user">
		select users_num from users where id=#{id} and pwd=#{pwd }
	</select>
	<delete id="delete" parameterType="int">
		delete from users where users_num = #{users_num}
	</delete>
	<update id="update" parameterType="com.jhta.netflix.user.vo.UserVo">
		update users set id = #{id},pwd = #{pwd} where users_num = #{users_num}
	</update>
	<select id="info" resultMap="com.jhta.netflix.user.vo.UserVo">
		select * from users where users_num = #{users_num}
	</select>
 </mapper>